<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <!-- Clear Windows fallback paths for Linux deployment -->
    <add key="globalPackagesFolder" value="/root/.nuget/packages" />
    <add key="fallbackPackageFolders" value="" />
  </config>
  <packageSources>
    <!-- Use official NuGet source only -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    <!-- Remove any local sources -->
  </packageSources>
  <packageRestore>
    <add key="enabled" value="True" />
    <add key="automatic" value="True" />
  </packageRestore>
</configuration>